<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dip"
            android:text="Game of chlidren down stairs"
            android:textStyle="bold"
            android:textSize="25sp"/>
    <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dip"
            android:text="Picture"
            android:background="#33b5e5"
            android:textSize="20sp"/>
    <TextView 
              android:id="@+id/product1_pic1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Picture1"
              android:layout_gravity="center"
              android:textSize="20sp"
              android:textColor="#6eacf2"
              android:textStyle="bold"
              android:clickable="true"/>
     <TextView 
              android:id="@+id/product1_pic2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Picture2"
              android:layout_gravity="center"
              android:textSize="20sp"
              android:textColor="#6eacf2"
              android:textStyle="bold"
              android:clickable="true"/>
      <TextView 
              android:id="@+id/product1_pic3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Picture3"
              android:layout_gravity="center"
              android:textSize="20sp"
              android:textColor="#6eacf2"
              android:textStyle="bold"
              android:clickable="true"/>
       <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dip"
            android:text="Tool"
            android:background="#33b5e5"
            android:textSize="20sp"/>
       <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Processing"
                android:layout_gravity="center"
                android:layout_marginTop="5dip"
                android:textSize="20sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arduino"
                android:layout_gravity="center"
                android:layout_marginTop="5dip"
                android:textSize="20sp"/>
          <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breadboard"
                android:layout_gravity="center"
                android:layout_marginTop="5dip"
                android:textSize="20sp"/>
          <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wire"
                android:layout_gravity="center"
                android:layout_marginTop="5dip"
                android:textSize="20sp"/>
          <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                android:layout_gravity="center"
                android:layout_marginTop="5dip"
                android:textSize="20sp"/>
          <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buzzer"
                android:layout_gravity="center"
                android:layout_marginTop="5dip"
                android:textSize="20sp"/>
       <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dip"
            android:text="Introduction"
            android:background="#33b5e5"
            android:textSize="20sp"/>
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dip"
            android:text="@string/product1"
            android:textSize="20sp"/>
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dip"
            android:text="Product Video"
            android:background="#33b5e5"
            android:textSize="20sp"/>
         <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dip"
            android:text="https://www.youtube.com/watch?v=eMScaHGgQw0"
            android:textSize="20sp"
            android:autoLink="web"/>
   
</LinearLayout>
</ScrollView>
