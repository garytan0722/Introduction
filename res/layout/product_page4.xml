<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dip"
            android:text="License plate recognition"
            android:textStyle="bold"
            android:textSize="25sp"/>
    <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dip"
            android:text="Picture"
            android:background="#33b5e5"
            android:textSize="20sp"/>
    <TextView 
              android:id="@+id/product4_pic1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Picture1"
              android:layout_gravity="center"
              android:textSize="20sp"
              android:textColor="#6eacf2"
              android:textStyle="bold"
              android:clickable="true"/>
     <TextView 
              android:id="@+id/product4_pic2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Picture2"
              android:layout_gravity="center"
              android:textSize="20sp"
              android:textColor="#6eacf2"
              android:textStyle="bold"
              android:clickable="true"/>
      <TextView 
              android:id="@+id/product4_pic3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Picture3"
              android:layout_gravity="center"
              android:textSize="20sp"
              android:textColor="#6eacf2"
              android:textStyle="bold"
              android:clickable="true"/>
      <TextView 
              android:id="@+id/product4_pic4"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Picture4"
              android:layout_gravity="center"
              android:textSize="20sp"
              android:textColor="#6eacf2"
              android:textStyle="bold"
              android:clickable="true"/>
   <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dip"
            android:text="Tool"
            android:background="#33b5e5"
            android:textSize="20sp"/>
    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OpenCV"
                android:layout_gravity="center"
                android:layout_marginTop="5dip"
                android:textSize="20sp"/>
   <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dip"
            android:text="Introduction"
            android:background="#33b5e5"
            android:textSize="20sp"/>
   <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product4"
                android:gravity="center"
                android:layout_marginTop="5dip"
                android:textSize="20sp"/>
  
</LinearLayout>
</ScrollView>
