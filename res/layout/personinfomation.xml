            android:layout_marginTop="5dip"
            android:text="MAJOR"
            android:background="#7DD0D7"
            android:textSize="20sp"/>
      <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dip"
            android:text="@string/department"
            android:textSize="20sp"/>
